<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard.dashboard"
    android:orientation="vertical"
    android:background="@drawable/background">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        android:gravity="center"
        android:textSize="45dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/requested"
            android:layout_width="150dp"
            android:layout_marginTop="20dp"
            android:layout_height="50dp"
            android:background="@drawable/red_button"
            android:text="Request Blood"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"/>

        <ImageButton
            android:id="@+id/notification"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/baseline_notifications_24"
            android:contentDescription="notification"
            android:contextClickable="true" />

        <ImageButton
            android:id="@+id/person"
            android:contextClickable="true"
            android:contentDescription="person"

            android:layout_width="50dp"
            android:layout_marginTop="20dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/baseline_person_24"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="150dp"
        >

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Top Donor"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="7dp"
            app:cardUseCompatPadding="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="52dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/baseline_person_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="50dp">
                <TextView
                    android:id="@+id/txtdonatedname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Suman Shah"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Donated 12 times"></TextView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="7dp"
            app:cardUseCompatPadding="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="52dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/baseline_person_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="50dp">
                <TextView
                    android:id="@+id/txtdonatedname2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Prakash Sapkota"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Donated 10 times"></TextView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="7dp"
            app:cardUseCompatPadding="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="52dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/baseline_person_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="50dp">
                <TextView
                    android:id="@+id/txtdonatedname3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Khem Raj Joshi"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Donated 5 times"></TextView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="7dp"
            app:cardUseCompatPadding="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="52dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/baseline_person_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="50dp">
                <TextView
                    android:id="@+id/txtdonatedname4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chandan Shahu"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Donated 8 times"></TextView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:gravity="center">
            <TextView
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="No. of people facilitated = "></TextView>
            <TextView
                android:id="@+id/facilitatedpeople"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="1120"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADS HERE"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>